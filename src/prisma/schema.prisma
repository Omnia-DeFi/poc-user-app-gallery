generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  issuer           String 
  email            String  @unique
  phone_number     Int? 
  public_address   String?
  notifications    NotificationsBearer?
  kyc              Kyc[]
  assets           Asset[]
}

model NotificationsBearer {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  userId           String @db.ObjectId @unique
  bearerId         String @unique @db.ObjectId
  user             User  @relation(fields: [userId], references: [id])
  notifications    Notifications[]
}

model Notifications {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  bearerId           String @db.ObjectId
  bearer             NotificationsBearer @relation(fields: [bearerId], references: [bearerId])
  type               String
  title              String
  content            String
  createdAt          DateTime
  read               Boolean
}

model Kyc {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  user             User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String @db.ObjectId
  type             String
  supportiveData   Json
  status           String
  requestedAt      DateTime
  approvedAt       DateTime
}


model Asset {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String @db.ObjectId 
  landRegistry      String
  floorArea         String
  hasOutdoorSpace   Boolean
  bedrooms          Int
  bathrooms         Int
  otherRooms        Int
  floorPrice        Int
  saleTimeframe     Int
  // assetFolderLink   String
  // mintAddress       String
  // saleStatus        String
  // verificationState String
  // outdoorSpaceSize  Int
  extraConditionsLabels  String[]
  extraConditionsDescriptions Int[]
}