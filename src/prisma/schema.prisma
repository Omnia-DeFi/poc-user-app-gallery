generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  issuer           String 
  email            String  @unique
  phone_number     Int? 
  public_address   String?
  notifications    NotificationsBearer?
  kyc              Kyc[]
}

model NotificationsBearer {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  userId           String @db.ObjectId @unique
  bearerId         String @unique @db.ObjectId
  user             User  @relation(fields: [userId], references: [id])
  notifications    Notifications[]
}

model Notifications {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  bearerId           String @db.ObjectId
  bearer             NotificationsBearer @relation(fields: [bearerId], references: [bearerId])
  type               String
  title              String
  content            String
  createdAt          DateTime
  read               Boolean
}

model Kyc {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  user             User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String @db.ObjectId
  type             String
  supportiveData   Json
  status           String
  requestedAt      DateTime
  approvedAt       DateTime
}


model Assets {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  images            String[]
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String @db.ObjectId @unique
  productName       String
  description       String
  price             Int
  size              Int
  properties        String
  royalty           Int
  PutOnSale         Boolean
  InstantSalePrice  Boolean
  UnlockPurchased   Boolean
}